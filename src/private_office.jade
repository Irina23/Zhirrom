                                    .wholesale_customer
                                        h3 Данные оптового клиента
                                        div
                                            span Название компании
                                            input(type="text" name="company" data-validate="empty")
                                        div
                                            span ИНН*
                                            input(type="text" name="inn" data-validate="number")
                                        div
                                            span КПП
                                            input(type="text" name="kpp" data-validate="number-default")

                                        div
                                            span Телефон организации
                                            input(type="text" name="phone" data-validate="phone-default")
                                        div
                                           span Должность
                                           input(type="text" name="position" data-validate="empty")

                                    .contact_details
                                        h3 Ваши контактные данные
                                        div
                                            span E-mail*
                                            input(type="text" name="email" data-validate="email")
                                        div
                                            span Ваше имя*
                                            input(type="text" name="name" data-validate="name")
                                        div
                                            span Фамилия*
                                            input(type="text" name="surname" data-validate="name")

                                        div
                                            span Дата в формате ДД-ММ-ГГГГ
                                            input(type="text" name="data" data-validate="data" placeholder="ДД-ММ-ГГГГ")
                                        div
                                            span Контактный телефон*
                                            input(type="text" name="phone_contact" data-validate="phone")


                                    .address
                                        h3 Ваш адрес доставки
                                        div.short.margin20
                                            span Город / Населенный пункт*
                                            input(type="text" name="city" data-validate="name")
                                        div.short
                                            span Индекс
                                            input(type="text" name="index" data-validate="index")
                                        div
                                            span Улица
                                            input(type="text" name="street" data-validate="empty")

                                        div.short.margin20
                                            span Дом / Корпус
                                            input(type="text" name="housing" data-validate="number-default")

                                        div.short
                                            span Квартира / Офис
                                            input(type="text" name="apartment" data-validate="number-default")
                                        div.short.margin20
                                            span Вид перевозки
                                            input(type="text" name="delivery" data-validate="empty")

                                        div.short
                                            span Транспортная компания
                                            input(type="text" name="delivery_compamy" data-validate="empty")

